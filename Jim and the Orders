#include <stdio.h>
#include <stdlib.h>

typedef struct {
    int customer;   
    int serveTime;  
} Order;

int compare(const void *a, const void *b) {
    Order *o1 = (Order *)a;
    Order *o2 = (Order *)b;

    if (o1->serveTime == o2->serveTime) {
        return o1->customer - o2->customer;   
    }
    return o1->serveTime - o2->serveTime;    
}

int main() {
    int n;
    scanf("%d", &n);

    Order orders[n];

    for (int i = 0; i < n; i++) {
        int orderNum, prepTime;
        scanf("%d %d", &orderNum, &prepTime);
        orders[i].customer = i + 1;              
        orders[i].serveTime = orderNum + prepTime; 
    }

    qsort(orders, n, sizeof(Order), compare);

    // Print result
    for (int i = 0; i < n; i++) {
        printf("%d", orders[i].customer);
        if (i < n - 1) printf(" ");
    }
    printf("\n");

    return 0;
}
